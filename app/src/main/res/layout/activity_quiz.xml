<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".QuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BDFF84"

        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question 1 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="1.How to pass the data between activities in Android? "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/num_one_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="intent"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/transition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content provider"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="braodcast receiver"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="non of the above"
                android:textSize="16sp" />

        </RadioGroup>

        <!-- Question 2 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="2.What is ADB in android?"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/num_two_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android debug bridge"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="image tool"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/mainact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="image development"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none of the above"
                android:textSize="16sp" />

        </RadioGroup>

        <!-- Question 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="3.How many orientations does android support?"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/num_three_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none of above"
                android:textSize="16sp" />

        </RadioGroup>


        <!-- Question 4 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="4.How to pass the data between activities in Android?"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/num_four_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">


            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="intent"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content provider"
                android:textSize="16sp" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="broadcast receiver"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/fournumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none of the above"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="5.What are the functionalities in asyncTask in android?"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <!-- Question 5 -->

        <RadioGroup
            android:id="@+id/num_five_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OnpreExecution()"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DoInbackground()"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/listener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onprogressUpdate()"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onPostExecution"
                android:textSize="16sp" />


        </RadioGroup>

        <!-- Question 6 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="6.What are the functionalities of HTTP Client interface in android? "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint="Please enter your answer"
            android:inputType="text" />

        <!-- Question 7 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="7.What is the 9 patch tool in android? "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint="Please enter your answer"
            android:inputType="text" />


        <!-- Question 8 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="8. Which of these are not one of the three main components of the APK? "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#091A3F"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/activity_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dalvik Executable "
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/drawable_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resources"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/Android_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native Libraries"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/Main_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:text="Webkit "
            android:textSize="16sp" />


        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Submit" />

    </LinearLayout>

</ScrollView>